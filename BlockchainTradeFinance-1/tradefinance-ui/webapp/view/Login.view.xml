<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="temp.L_C.controller.Login"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<Page class="page2BgImg" showHeader="false">
			<content>
				<VBox fitContainer="true" justifyContent="Center" alignItems="Center" alignContent="Center">
					<items>
						<Toolbar class="toolbarcss">
							<Image src='./image/EYLogo4whitetransparent.svg ' class=" imagecss"></Image>
							<ToolbarSeparator class="cssseprator"></ToolbarSeparator>
							<Label text="Trade Finance" class="sapUiSmallMarginTop margincss"/>
						</Toolbar>
					</items>
					<VBox class="grad2" fitContainer="true" justifyContent="Center" alignItems="Center" alignContent="Center">
						<items>
							<Title text="Enter Credentials to Login" class="titlecss"></Title>
							<Input width="300px" id="uid" placeholder="Email" class="einputcss sapUiSmallMarginTop"></Input>
							<Input width="300px" id="pasw" placeholder="Password" type="Password" class="Pasdcss sapUiSmallMarginTop"></Input>
							<Button width="200px" text="Login" press="onLoginTap" class="buttoncss sapUiSmallMarginTop"></Button>
							<Link text="Forgot Password ? " press="ForgotPasswordliink" class="linkcss sapUiSmallMarginTop"/>
						</items>
					</VBox>
				</VBox>
			</content>
		</Page>
	</App>
</mvc:View>